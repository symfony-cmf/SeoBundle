<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_seo.error_handling.matcher.parent.class">Symfony\Cmf\Bundle\SeoBundle\Doctrine\Phpcr\ParentBestMatcher</parameter>
        <parameter key="cmf_seo.error_handling.matcher.ancestor.class">Symfony\Cmf\Bundle\SeoBundle\Doctrine\Phpcr\AncestorBestMatcher</parameter>
    </parameters>

    <services>
        <service id="cmf_seo.error_handling.matcher.parent" class="%cmf_seo.error_handling.matcher.parent.class%">
            <argument type="service" id="doctrine_phpcr" />
            <argument>%cmf_routing.dynamic.persistence.phpcr.route_basepath%</argument>
            <tag name="cmf_seo.best_matcher" group="parent" />
        </service>
        <service id="cmf_seo.error_handling.matcher.ancestor" class="%cmf_seo.error_handling.matcher.ancestor.class%">
            <argument type="service" id="doctrine_phpcr" />
            <argument>%cmf_routing.dynamic.persistence.phpcr.route_basepath%</argument>
            <tag name="cmf_seo.best_matcher" group="ancestor" />
        </service>

    </services>

</container>
