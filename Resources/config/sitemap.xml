<?xml version="1.0" ?>

<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_seo.sitemap.controller.class">Symfony\Cmf\Bundle\SeoBundle\Controller\SitemapController</parameter>
        <parameter key="cmf_seo.sitemap.provider.class">Symfony\Cmf\Bundle\SeoBundle\Sitemap\Provider</parameter>

        <parameter key="cmf_seo.sitemap.loader_chain.class">Symfony\Cmf\Bundle\SeoBundle\Sitemap\Loader</parameter>
        <parameter key="cmf_seo.sitemap.guesser.class">Symfony\Cmf\Bundle\SeoBundle\Sitemap\Guesser</parameter>
        <parameter key="cmf_seo.sitemap.voter_chain.class">Symfony\Cmf\Bundle\SeoBundle\Sitemap\Voter</parameter>
        <parameter key="cmf_seo.sitemap.phpcr.public_workflow_voter.class">Symfony\Cmf\Bundle\SeoBundle\Sitemap\PublishWorkflowUrlInformationVoter</parameter>
    </parameters>

    <services>
        <service id="cmf_seo.sitemap.controller" class="%cmf_seo.sitemap.controller.class%">
            <argument type="service" id="cmf_seo.sitemap.provider" />
            <argument type="service" id="templating" />
            <argument>%cmf_seo.sitemap.configurations%</argument>
        </service>
        <service id="cmf_seo.sitemap.loader_chain" class="%cmf_seo.sitemap.loader_chain.class%" />
        <service id="cmf_seo.sitemap.guesser" class="%cmf_seo.sitemap.guesser.class%" >
            <argument type="service" id="router" />
            <argument type="service" id="cmf_seo.presentation" />
            <argument>%cmf_seo.sitemap.default_change_frequency%</argument>
        </service>
        <service id="cmf_seo.sitemap.voter_chain" class="%cmf_seo.sitemap.voter_chain.class%" />

        <service id="cmf_seo.sitemap.provider" class="%cmf_seo.sitemap.provider.class%">
            <argument type="service" id="cmf_seo.sitemap.loader_chain" />
            <argument type="service" id="cmf_seo.sitemap.guesser" />
            <argument type="service" id="cmf_seo.sitemap.voter_chain" />
        </service>

        <service id="cmf_seo.sitemap.phpcr.public_workflow_voter" class="%cmf_seo.sitemap.phpcr.public_workflow_voter.class%">
            <argument type="service" id="cmf_core.publish_workflow.checker" />
            <tag name="cmf_seo.sitemap.voter" />
        </service>

        <service id="cmf_core.publish_workflow.access_decision_manager" class="%cmf_core.publish_workflow.access_decision_manager.class%">
            <argument type="collection"/>
            <argument>unanimous</argument>
            <argument>true</argument>
        </service>
    </services>
</container>
